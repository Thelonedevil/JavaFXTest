<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane alignment="center" hgap="10" stylesheets="style.css" vgap="10" xmlns="http://javafx.com/javafx/8"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="uk.tldcode.Controller">
    <children>
        <TextField fx:id="server" text="irc.esper.net" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <TextField fx:id="port" text="6667" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
        <TextField fx:id="password" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
        <TextField fx:id="nick" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
        <Label text="Server Address:" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Label text="Port Number" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Label text="Server Password" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Label text="Nickname" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        <Button mnemonicParsing="false" onAction="#connect" text="Connect" GridPane.columnIndex="2"
                GridPane.rowIndex="5"/>
        <Button mnemonicParsing="false" text="Cancel" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    </children>
    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints minHeight="10.0" prefHeight="30.0"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0"/>
    </rowConstraints>
</GridPane>
